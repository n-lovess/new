CHIP DisplayCounter2304156 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    Register(in=counterInput, load=load, out=counterValue);
    Inc16(in=counterValue, out=incrementedValue);
    Mux16(a=false, b=incrementedValue, sel=inc, out=incrementedOrHold);
    Mux16(a=false, b=incrementedOrHold, sel=reset, out=counterInput);
    Or(a=inc, b=reset, out=load);
    SevenSegmentDecoder(in=counterValue[0..3], out[0]=a, out[1]=b, out[2]=c, out[3]=d, out[4]=e, out[5]=f, out[6]=g);
}