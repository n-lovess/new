CHIP DisplayCounter {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;

    PARTS:
    Register(in=counterInput, load=true, out=counterValue);
    Inc16(in=counterValue, out=incrementedValue);
    Mux16(a=false, b=incrementedValue, sel=reset, out=counterInput);
    SevenSegmentDecoder(in=counterValue[0..3], out=a, out=b, out=c, out=d, out=e, out=f, out=g);
}